<Report 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://safe.epcc.ed.ac.uk/report ../../schema/report.xsd"
  xmlns="http://safe.epcc.ed.ac.uk/report"
  xmlns:par="http://safe.epcc.ed.ac.uk/parameter"
  xmlns:per="http://safe.epcc.ed.ac.uk/period"
  xmlns:fil="http://safe.epcc.ed.ac.uk/filter"
  xmlns:tab="http://safe.epcc.ed.ac.uk/table"
  xmlns:cha="http://safe.epcc.ed.ac.uk/chart"
  xmlns:ato="http://safe.epcc.ed.ac.uk/atom">
  
<Title>Test For</Title>
<par:ParameterDef name="MyBoolean" type="Boolean" value="true"/>
<par:For source="TestClassifier" var="cl">
<fil:GT><fil:Property>count</fil:Property><fil:Value>1</fil:Value></fil:GT>
<par:Content>
<par:FormatParameter name="cl">
Count one name ${Name} count ${count}
</par:FormatParameter>
<par:IfSet name="MyBoolean">
<par:Content>
<Text>hooray for <par:Parameter name="cl"/></Text>
</par:Content>
<par:Fallback>
<Text>BOO for <par:Parameter name="cl"/></Text>
</par:Fallback>
</par:IfSet>
</par:Content>
</par:For>

</Report>
