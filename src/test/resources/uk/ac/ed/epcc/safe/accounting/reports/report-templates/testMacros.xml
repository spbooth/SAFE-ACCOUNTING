<Report 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://safe.epcc.ed.ac.uk/report"
  xmlns:par="http://safe.epcc.ed.ac.uk/parameter"
  xmlns:mac="http://safe.epcc.ed.ac.uk/macro"
  xmlns:per="http://safe.epcc.ed.ac.uk/period"
  xmlns:fil="http://safe.epcc.ed.ac.uk/filter"
  xmlns:tab="http://safe.epcc.ed.ac.uk/table"
  xmlns:cha="http://safe.epcc.ed.ac.uk/chart"
  xmlns:ato="http://safe.epcc.ed.ac.uk/atom">

	<mac:MacroDef name="macro_a"><Div>igor</Div></mac:MacroDef>
	<mac:MacroDef name="macro_b"><Div>cuddles</Div></mac:MacroDef>
	<mac:MacroDef name="macro_c">fred</mac:MacroDef>
	<Section>
	<Heading>Macro A</Heading>
	<mac:Macro name="macro_a"/>
	
	<Heading>Macro B</Heading>
	<mac:Macro name="macro_b"/> 

	<Heading>Macro C</Heading>
	<Text><mac:Macro name="macro_c"/></Text>
	
	
	<mac:Switch>
	<mac:Case Key="igor">
	<mac:Value><mac:Macro name="macro_a"/></mac:Value>
	<mac:Body><Text>Throw the switch!!!</Text></mac:Body>
	</mac:Case>
	<mac:Case Key="cuddles">
	<mac:Value><mac:Macro name="macro_a"/></mac:Value>
	<mac:Body><Text>Will you be my friend</Text></mac:Body>
	</mac:Case>
	</mac:Switch>
	</Section>
</Report>